modules = ["nodejs-20", "php-8.2", "web"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Run Angular"

[[workflows.workflow]]
name = "Run Frontend"
author = 99479
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd kimyaogreniyorum && npm install && ng serve --host 0.0.0.0 --port 4200"

[[workflows.workflow]]
name = "Run Backend"
author = 99479
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && php -S 0.0.0.0:5000"

[[workflows.workflow]]
name = "Run Angular"
author = 99479
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd kimyaogreniyorum && npm install -g @angular/cli && npm install && ng serve --host 0.0.0.0 --port 4200"
